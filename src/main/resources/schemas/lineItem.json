{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "The line item of stock card.",
  "properties": {
    "reason": {
      "type": "object",
      "title": "Reason",
      "$ref": "reason.json"
    },
    "quantity": {
      "type": "integer"
    },
    "stockAdjustments": {
      "type": "array",
      "title": "StockAdjustments",
      "items": {
        "type": "object",
        "title": "StockAdjustment",
        "$ref": "stockAdjustment.json"
      }
    },
    "signature": {
      "type": "string"
    },
    "documentNumber": {
      "type": "string"
    },
    "reasonFreeText": {
      "type": "string"
    },
    "destination": {
      "type": "object",
      "title": "Destination",
      "$ref": "facility.json"
    },
    "stockOnHand": {
      "type": "integer"
    },
    "id": {
      "type": "string"
    },
    "source": {
      "type": "object",
      "title": "Source",
      "$ref": "facility.json"
    },
    "sourceFreeText": {
      "type": "string"
    },
    "destinationFreeText": {
      "type": "string"
    },
    "occurredDate": {
      "type": "string",
      "format": "date"
    },
    "extraData": {
      "type": "object",
      "description": "Can be used to save additional data for line item.",
      "title": "extraData"
    }
  }
}
