{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "errorDescription": {
            "type": "string"
          },
          "lineItems": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "date": {
                  "type": "string",
                  "format": "date-time"
                },
                "documentNumber": {
                  "type": "string"
                },
                "receivedQuantity": {
                  "type": "integer"
                },
                "receivedFrom": {
                  "type": "string"
                },
                "issueQuantity": {
                  "type": "integer"
                },
                "issueTo": {
                  "type": "string"
                },
                "adjustmentQuantity": {
                  "type": "integer"
                },
                "adjustmentReason": {
                  "type": "string"
                },
                "stockOnHand": {
                  "type": "integer"
                },
                "signature": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "date"
              ]
            }
          }
        },
        "required": [
          "errorDescription",
          "lineItems"
        ]
      }
    }
  },
  "required": [
    "updatedStockCards",
    "createdStockCards",
    "errors"
  ]
}